{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "../packages/*"
  ],
  "scripts": {
    "dev": "bun --watch index.ts",
    "build": "bun run db:generate && bun build index.ts --outdir dist --target node",
    "start": "bun dist/index.js",
    "check-types": "bun tsc --noEmit",
    "db:generate": "bunx prisma generate --schema=../packages/db/prisma/schema.prisma",
    "db:push": "bunx prisma db push --schema=../packages/db/prisma/schema.prisma",
    "db:migrate": "bunx prisma migrate deploy --schema=../packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.6",
    "typescript": "^5.3.0",
    "prisma": "^5.0.0",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "tailwindcss": "^4.1.9",
    "postcss": "8.5.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "ai": "^3.3.0",
    "@ai-sdk/openai": "^0.0.66",
    "@prisma/client": "^5.0.0",
    "next": "15.5.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.542.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7"
  }
}
