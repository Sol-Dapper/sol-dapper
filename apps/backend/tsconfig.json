{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/db/*": ["./packages/db/*"],
      "@/lib/*": ["./lib/*"]
    }
  },
  "include": ["**/*.ts", "./packages/db/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
